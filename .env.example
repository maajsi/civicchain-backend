# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/civicchain

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PROGRAM_ID=your_deployed_program_id
MASTER_WALLET_PRIVATE_KEY=[...]

# Note: User wallets are now self-managed
# Private keys are generated on signup and stored encrypted in database
# No Privy integration required

# AI Service Configuration
AI_SERVICE_URL=http://localhost:9001
ROBOFLOW_ENDPOINT=/civic-issue-yljwt/2

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
ROBOFLOW_API_KEY=your_roboflow_api_key_here