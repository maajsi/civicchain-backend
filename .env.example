# Environment Configuration

# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=civicchain
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
MASTER_WALLET_PRIVATE_KEY=[1,2,3,...,64]
# Master wallet private key as JSON array of 64 numbers
# Generate with: solana-keygen new --outfile master-wallet.json
# Then convert to array format

# AI Service (Python FastAPI)
AI_SERVICE_URL=http://localhost:8000

# File Upload
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Application
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Google OAuth (for reference - actual OAuth handled by frontend)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
