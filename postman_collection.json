{
  "info": {
    "name": "CivicChain Backend API",
    "description": "Complete API collection for CivicChain Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "issue_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (New User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.jwt_token);",
                  "    pm.collectionVariables.set('user_id', response.user.user_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"name\": \"Test User\",\n  \"profile_pic\": \"https://example.com/photo.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/me",
              "host": ["{{base_url}}"],
              "path": ["user", "me"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["user", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Issues",
      "item": [
        {
          "name": "Classify Issue Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": "/path/to/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/issue/classify",
              "host": ["{{base_url}}"],
              "path": ["issue", "classify"]
            }
          }
        },
        {
          "name": "Report Issue",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('issue_id', response.issue.issue_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image_url\": \"/uploads/test.jpg\",\n  \"description\": \"Large pothole on Main Street\",\n  \"category\": \"pothole\",\n  \"lat\": 17.385,\n  \"lng\": 78.4867,\n  \"region\": \"Hyderabad\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/issue/report",
              "host": ["{{base_url}}"],
              "path": ["issue", "report"]
            }
          }
        },
        {
          "name": "Get All Issues",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/issues",
              "host": ["{{base_url}}"],
              "path": ["issues"]
            }
          }
        },
        {
          "name": "Get Issues Near Location",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/issues?lat=17.385&lng=78.4867&radius=5000&status=open",
              "host": ["{{base_url}}"],
              "path": ["issues"],
              "query": [
                {
                  "key": "lat",
                  "value": "17.385"
                },
                {
                  "key": "lng",
                  "value": "78.4867"
                },
                {
                  "key": "radius",
                  "value": "5000"
                },
                {
                  "key": "status",
                  "value": "open"
                }
              ]
            }
          }
        },
        {
          "name": "Get Issue by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/issue/{{issue_id}}",
              "host": ["{{base_url}}"],
              "path": ["issue", "{{issue_id}}"]
            }
          }
        },
        {
          "name": "Upvote Issue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/issue/{{issue_id}}/upvote",
              "host": ["{{base_url}}"],
              "path": ["issue", "{{issue_id}}", "upvote"]
            }
          }
        },
        {
          "name": "Downvote Issue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/issue/{{issue_id}}/downvote",
              "host": ["{{base_url}}"],
              "path": ["issue", "{{issue_id}}", "downvote"]
            }
          }
        },
        {
          "name": "Verify Resolved Issue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"verified\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/issue/{{issue_id}}/verify",
              "host": ["{{base_url}}"],
              "path": ["issue", "{{issue_id}}", "verify"]
            }
          }
        },
        {
          "name": "Update Issue Status (Gov)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "status",
                  "value": "resolved",
                  "type": "text"
                },
                {
                  "key": "proof_image",
                  "type": "file",
                  "src": "/path/to/proof.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/issue/{{issue_id}}/update-status",
              "host": ["{{base_url}}"],
              "path": ["issue", "{{issue_id}}", "update-status"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin (Government Only)",
      "item": [
        {
          "name": "Get Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/dashboard",
              "host": ["{{base_url}}"],
              "path": ["admin", "dashboard"]
            }
          }
        },
        {
          "name": "Get All Issues (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/issues?status=open&sort_by=priority&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["admin", "issues"],
              "query": [
                {
                  "key": "status",
                  "value": "open"
                },
                {
                  "key": "sort_by",
                  "value": "priority"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
